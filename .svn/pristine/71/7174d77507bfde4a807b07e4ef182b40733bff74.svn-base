<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="i2t.cideim.leishmaniasis" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/elemento"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateUserActivity"
            android:label="@string/title_activity_create_user"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PatientsActivity"
            android:label="@string/title_activity_patients"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreatePatientActivity"
            android:label="@string/title_activity_create_patient"
            android:screenOrientation="portrait" >
        </activity>

        <service
            android:name=".SyncService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <activity
            android:name=".ViewPatientActivity"
            android:label="@string/title_activity_view_patient" >
        </activity>

        <activity
            android:name=".WeekComprobationActivity"
            android:label="@string/title_activity_week"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".AdverseEventsActivity"
            android:label="@string/title_activity_adverse"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".InjuryStatusActivity"
            android:label="@string/title_activity_injury"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".TreatmentControlActivity"
            android:label="@string/title_activity_treatment"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
